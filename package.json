{
  "name": "job-tracker",
  "version": "2.0.0",
  "description": "Full-stack Job Application Tracker with Cloud Storage and Chrome Extension",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server": "node backend/server.js",
    "server:dev": "nodemon backend/server.js",
    "client:dev": "serve JTS -p 8080",
    "build": "echo 'No build step required for static frontend'",
    "test": "echo 'Tests not configured yet'",
    "install:all": "npm install && cd backend && npm install",
    "setup": "npm run install:all && cp backend/.env.example backend/.env",
    "clean": "rm -rf node_modules backend/node_modules",
    "lint": "echo 'Linting not configured'",
    "security:check": "npm audit",
    "backup:env": "cp backend/.env backend/.env.backup"
  },
  "keywords": [
    "job-tracker",
    "job-application",
    "chrome-extension",
    "mongodb",
    "nodejs",
    "express",
    "career-management"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "serve": "^14.2.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/job-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/username/job-tracker/issues"
  },
  "homepage": "https://github.com/username/job-tracker#readme",
  "author": {
    "name": "Mario263",
    "email": "mario@example.com"
  },
  "license": "MIT",
  "private": true
}